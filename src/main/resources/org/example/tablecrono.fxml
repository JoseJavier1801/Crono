<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller.ControllerShowCrono">

    <TableView fx:id="cronoTable" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="230.0">
        <!-- Columnas para las horas, minutos y segundos -->
        <columns>
            <TableColumn fx:id="hoursColumn" prefWidth="75.0" text="Horas">
                <cellValueFactory>
                    <PropertyValueFactory property="hours" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="minutesColumn" prefWidth="75.0" text="Minutos">
                <cellValueFactory>
                    <PropertyValueFactory property="minutes" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="secondsColumn" prefWidth="75.0" text="Segundos">
                <cellValueFactory>
                    <PropertyValueFactory property="seconds" />
                </cellValueFactory>
            </TableColumn>

            <!-- TambiÃ©n puedes agregar una columna para milisegundos si es necesario -->
            <TableColumn fx:id="milisegundosColumn" prefWidth="75.0" text="Milisegundos">
                <cellValueFactory>
                    <PropertyValueFactory property="milisegundos" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

</AnchorPane>
